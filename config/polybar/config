# Cores
[cores]
barra = #00000000
borda = #00000000
fonte = #2C3E50
menu = #2C3E50
i3vintage = #2C3E50
github = #2C3E50
screencast = #2C3E50
screenshot = #2C3E50
focado = #2C3E50
urgente = #2C3E50
temperatura = #2C3E50
bateria = #2C3E50
hora = #2C3E50
data = #2C3E50
som = #2C3E50
voltar = #2C3E50
tocar-parar = #2C3E50
avancar = #2C3E50
cmus = #2C3E50
janela = #2C3E50
cpu = #2C3E50
memoria = #2C3E50
arquivos = #2C3E50
wireless = #2C3E50
usuario = #2C3E50
controle = #2C3E50

# Barra de cima
[bar/cima]
width = 100%
height = 23
radius = 0
fixed-center = true
bottom = false
background = ${cores.barra}
foreground = ${cores.fonte}
line-size = 3
line-color = ${cores.barra}
border-size = 1
border-color = ${cores.borda}
padding-left = 0
padding-right = 0
module-margin-left = 0
module-margin-right = 0
font-0 = "Fira Sans:antialias=true:size=10;0"
font-1 = "feather:pixelsize=10;0"
modules-left = menu tray
modules-center = i3
modules-right = temperatura bateria hora data
cursor-click = pointer
cursor-scroll = ns-resize
locale = pt_BR.UTF-8

# Barra de baixo
[bar/baixo]
width = 100%
height = 23
radius = 0
fixed-center = true
bottom = true
background = ${cores.barra}
foreground = ${cores.fonte}
line-size = 3
line-color = ${cores.barra}
border-top-size = 1
border-color = ${cores.borda}
padding-left = 0
padding-right = 0
module-margin-left = 0
module-margin-right = 0
font-0 = "Fira Sans:antialias=true:size=10;0"
font-1 = "feather:pixelsize=10;0"
modules-left = som voltar tocar-parar avancar cmus
modules-center = janela
modules-right = cpu memoria arquivos wireless usuario controle
cursor-click = pointer
cursor-scroll = ns-resize
locale = pt_BR.UTF-8

# Menu
[module/menu]
type = custom/text
content =  Menu
content-padding = 1
content-foreground = ${cores.menu}
click-left = exec rofi -bw 2 -lines 5 -font "Fira Sans 14" -show drun -display-drun "$USER"

# I3
[module/i3]
type = internal/i3
format = <label-state> <label-mode>
index-sort = true
wrapping-scroll = false
ws-icon-0 = 1; 
ws-icon-1 = 2;
ws-icon-2 = 3;
ws-icon-3 = 4;
ws-icon-4 = 5;
ws-icon-5 = 6;
ws-icon-6 = 7;
ws-icon-7 = 8;
ws-icon-8 = 9;
ws-icon-9 = 10;
strip-wsnumbers = true
label-mode = %mode%
label-mode-padding = 1
label-focused = | %name% |
label-focused-padding = 1
label-focused-foreground = ${cores.focado}
label-unfocused = %name%
label-unfocused-padding = 1
label-visible = %name%
label-visible-padding = 1
label-urgent = - %name% -
label-urgent-padding = 1
label-urgent-foreground = ${cores.urgente}

# Temperatura
[module/temperatura]
type = internal/temperature
thermal-zone = 0
warn-temperature = 60
format = <label> <ramp>
format-padding = 1
format-foreground = ${cores.temperatura}
format-warn = <label-warn> <ramp>
format-warn-padding = 1
format-warn-foreground = ${cores.temperatura}
label = %temperature-c%
label-warn = %temperature-c%
ramp-0 = 

# Bateria
[module/bateria]
battery = BAT0
adapter = ADP1
type = internal/battery
full-at = 98
interval = 1
poll-interval = 5
format-charging = <label-charging>
format-charging-padding = 1
format-charging-foreground = ${cores.bateria}
format-discharging = <label-discharging>
format-discharging-padding = 1
format-discharging-foreground = ${cores.bateria}
label-charging = %percentage%% 
label-discharging = %percentage%% 

# Hora
[module/hora]
type = internal/date
interval = 1
time = %H:%M
format = <label> 
format-padding = 1
format-foreground = ${cores.hora}
label = %time%

# Data
[module/data]
type = internal/date
interval = 1
date = %a, %d-%m-%Y
format = <label> 
format-padding = 1
format-foreground = ${cores.data}
label = %date%

# Som
[module/som]
type = internal/alsa
format-volume = <label-volume><bar-volume>
format-volume-padding = 1
label-volume = ""
label-volume-foreground = ${cores.som}
format-muted-prefix = ""
format-muted-padding = 1
format-muted-foreground = ${cores.som}
label-muted = 
bar-volume-width = 10
bar-volume-gradient = false
bar-volume-indicator-foreground = ${cores.som}
bar-volume-indicator = 
bar-volume-indicator-font = 5
bar-volume-fill-foreground = ${cores.som}
bar-volume-fill = 
bar-volume-fill-font = 5
bar-volume-empty-foreground = ${cores.som}
bar-volume-empty = 
bar-volume-empty-font = 5

# Controlador voltar
[module/voltar]
type = custom/text
content = 
content-padding = 1
content-foreground = ${cores.voltar}
click-left = cmus-remote --prev

# Controlador play & pause
[module/tocar-parar]
type = custom/text
content = 
content-foreground = ${cores.tocar-parar}
click-left = cmus-remote --pause

# Controlador avançar
[module/avancar]
type = custom/text
content = 
content-padding = 1
content-foreground = ${cores.avancar}
click-left = cmus-remote --next

# Cmus
[module/cmus]
type = custom/script
label = %output%
label-padding = 1
label-maxlen = 50
label-foreground = ${cores.cmus}
interval = 0.5
exec = $HOME/.config/scripts/cmus.sh

# Janela
[module/janela]
type = internal/xwindow
format = <label>
format-padding = 1
format-foreground = ${cores.janela}
label = %title%
label-maxlen = 50
label-empty = Sem janelas

# CPU
[module/cpu]
type = internal/cpu
interval = 0.5
format = <label>
label = %percentage%% 
label-padding = 1
label-foreground = ${cores.cpu}

# Memória
[module/memoria]
type = internal/memory
interval = 0.2
format = <label>
label = %percentage_used%% 
label-padding = 1
label-foreground = ${cores.memoria}

# Arquivos
[module/arquivos]
type = internal/fs
interval = 25
mount-0 = /
label-mounted = %used% 
label-mounted-padding = 1
label-mounted-foreground = ${cores.arquivos}

# Wireless
[module/wireless]
type = internal/network
interface = wlo1
format-connected = "<label-connected> "
format-connected-padding = 1
format-connected-foreground = ${cores.wireless}
label-connected = %essid%
format-disconnected = "<label-disconnected> "
format-disconnected-padding = 1
format-disconnected-foreground = ${cores.wireless}
label-disconnected = desconectado

# Usuário
[module/usuario]
type = custom/script
interval = 1
tail = true
exec = echo $USER 
format-padding = 1
format-foreground = ${cores.usuario}

# Controle
[module/controle]
type = custom/text
content = Controle 
content-padding = 1
content-foreground = ${cores.controle}
click-left = exec $HOME/.config/scripts/controle.sh

# Definições
[settings]
screenchange-reload = true

